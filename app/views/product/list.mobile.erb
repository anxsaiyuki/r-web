<div class="col-md-12 col-xs-12">
	<img src="../assets/img/<%= @category_name.category %>_Banner.png" style="width: 103%;">
<% @product.each do |product| %>
<div class="col-md-6 col-xs-6 product">
	<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1 image">

	</div>
	<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1 name" style="overflow:hidden">
		<%= link_to "#{product.product_name}", product_path(product) %>
	</div>
	<div class="col-md-5 col-md-offset-1 col-xs-5 col-xs-offset-1 price">
		$<%= product.price %>
	</div>
	<div class="col-md-6 buttons col-xs-6">
		<%= link_to "購買", add_cart_path(product), :remote => true%>
	</div>
	<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1 quantity">
		[ 在庫存數: <%= product.quantity %> ]
	</div>
</div>
<% end %>

</div>
<div class="col-md-12 col-xs-12 ">
<%= paginate @product %>
</div>
<div id="add_cart">
</div>


	
