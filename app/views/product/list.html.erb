<!DOCTYPE HTML PUBLIC>
<html>
<head>
<link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.16.0/build/cssreset/cssreset-min.css">
<link rel="stylesheet" href="/assets/css/bootstrap.css">
<link rel="stylesheet" href="/assets/css/bootstrap-theme.css">
<link rel="stylesheet" href="/assets/css/main.css">
<script data-turbolinks-track="true" src="/assets/jquery.js?body=1"></script>
<script data-turbolinks-track="true" src="/assets/jquery_ujs.js?body=1"></script>
<script data-main="/assets/js/main.js" src="/assets/js/lib/require.js" charset="utf-8" type="text/javascript"></script>
</head>
<style>

</style>

<body>
	<div id="container">
		<div id="top_bar">

		</div>
		<div class="login-container">
				<% if session[:userid].nil? then %>
				<a class="login-window top_bar_text" dialog="login-box">Login</a>
				<% else %>
					<%= link_to "Logout" , {:controller => "sessions", :action => "session_end"} , {:class =>  "top_bar_text"} %>
				<% end %>
				<div id="login-box" class="login-popup">
				<a href="#" class="close"><img src="../assets/img/x_button.png" class="btn_close" title="Close Window" alt="Close" /></a>

				  <%= form_for user, :url => url_for(:controller => 'sessions', :action => 'log_in'), :html => {:class => 'signin'}, remote: true do |f| %>
						<fieldset class="textbox">
						<label class="username">
						<span>Username or email</span>
						 <%= f.text_field :user_name %>
						</label>
						<label class="password">
						<span>Password</span>
						<%= f.password_field :password %>
						</label>
						<%= f.submit "Login"%>
						<p>
						<%= link_to "Register", register_path, {:class =>  "forgot register_form"} %>
						</p>
						<div id="error_message">
						</div>
						</fieldset>
				  <% end %>
				</div>
		</div>
		<div id="banner">
		
		</div>
		<div id="menu_bar">
		
		</div>
		<div id="content">
			<div class="row">
				<div id="side_menu">
					<%= render partial: "module/sideMenu" %>
				</div>
				<div id="product_container">
					<div class="col-md-10 col-xs-10">
					
					<% @product.each do |product| %>
					<div class="col-md-15 col-xs-15 product">
						<div class="col-md-11 col-md-offset-1 col-xs-11 col-xs-offset-1 image">
						<% if product.image.nil? then %>
						  
						    <%= link_to image_tag("../assets/img/No_Image.png"), product_path(product) %>
						<% else %>
						<%= link_to image_tag("../assets/img/#{product.category}/#{product.image.image_path}", width: '100px', height: '150px', class: 'product_image_little'), product_path(product) %>
						
						<% end %>
						</div>
						<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1 name">
							<%= product.product_name %>
						</div>
						<div class="col-md-5 col-md-offset-1 col-xs-5 col-xs-offset-1 price">
							$<%= product.price %>
						</div>
						<div class="col-md-6 buttons col-xs-6">
							<%= link_to "購買", add_cart_path(product), :remote => true%>
						</div>
						<div class="col-md-11 col-md-offset-1 col-xs-11 col-xs-offset-1 quantity">
							[ 在庫存數: <%= product.quantity %> ]
						</div>
					</div>
					<% end %>
					
					</div>
					<div class="col-md-4 col-md-offset-6 col-xs-4 col-xs-offset-6 ">
					<%= paginate @product %>
					</div>
				</div>
			</div>
		</div>
		<div id="add_cart">
		</div>
		<div id="footer">

		</div>

	</div>
<div id="mask"></div>
</body>
</html>
