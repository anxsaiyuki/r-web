<!DOCTYPE HTML PUBLIC>
<html>
<head>
<link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.16.0/build/cssreset/cssreset-min.css">
<link rel="stylesheet" href="/assets/css/bootstrap.css">
<link rel="stylesheet" href="/assets/css/bootstrap-theme.css">
<link rel="stylesheet" href="/assets/css/main.css">
<script data-turbolinks-track="true" src="/assets/jquery.js?body=1"></script>
<script data-turbolinks-track="true" src="/assets/jquery_ujs.js?body=1"></script>
<script data-main="/assets/js/main.js" src="/assets/js/lib/require.js" charset="utf-8" type="text/javascript"></script>
</head>
<style>

</style>

<body>
	<div id="container">
		<div id="top_bar">

		</div>
		<div class="login-container">
				<% if session[:userid].nil? then %>
				<a class="login-window top_bar_text" dialog="login-box">Login</a>
				<% else %>
					<%= link_to "Logout" , {:controller => "sessions", :action => "session_end"} , {:class =>  "top_bar_text"} %>
				<% end %>
				<div id="login-box" class="login-popup">
				<a href="#" class="close"><img src="../assets/img/x_button.png" class="btn_close" title="Close Window" alt="Close" /></a>

				  <%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'log_in'), :html => {:class => 'signin'}, remote: true do |f| %>
						<fieldset class="textbox">
						<label class="username">
						<span>Username or email</span>
						 <%= f.text_field :user_name %>
						</label>
						<label class="password">
						<span>Password</span>
						<%= f.password_field :password %>
						</label>
						<%= f.submit "Login"%>
						<p>
						<%= link_to "Register", register_path, {:class =>  "forgot register_form"} %>
						</p>
						<div id="error_message">
						</div>
						</fieldset>
				  <% end %>
				</div>
		</div>
		<div id="banner">

		</div>
		<div id="menu_bar">
		
		</div>
		<div id="content">
			<div class="row">
				<div id="side_menu">

				</div>
				<div id="Cart_Container">
					<div class="col-md-12 col-xs-12 cart_box">
							<div class="col-md-4 col-xs-4 Cart_Product_Name Cart_Title">Product Name</div>
							<div class="col-md-2 col-xs-2 Cart_Quantity Cart_Title">Quantity</div>
							<div class="col-md-2 col-xs-2 Cart_Price Cart_Title">Price</div>
							<div class="col-md-2 col-xs-2 Cart_Price Cart_Title">Total</div>
							<div class="col-md-2 col-xs-2 Cart_Price Cart_Title">Options</div>
						<% if @cart.empty? then %>
							<div class="cart_empty">Please Add Item to Cart</div>
						<% else %>
							<% @cart.each do |cart| %>
								<div class="col-md-4 col-xs-4 Cart_Product_Name">
									<%= cart.product.product_name %>
								</div>
								<div class="col-md-2 col-xs-2 Cart_Quantity">
									<%= cart.quantity %>
								</div>
								<div class="col-md-2 col-xs-2 Cart_Price">
									$<%= cart.price %>
								</div>
								<div class="col-md-2 col-xs-2 Cart_Total">
									$<%= cart.total_value %>
								</div>
								<div class="col-md-2 col-xs-2 Cart_Price">
									<%= link_to "Delete", remove_cart_path(cart.id), remote: true%>
								</div>
							<% end %>
						<% end %>
					</div>
				</div>
		</div>
		
		<div id="footer">

		</div>

	</div>
<div id="mask"></div>
</body>
</html>
