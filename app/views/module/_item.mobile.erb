<div class="row">
	<div class="col-md-12 col-xs-12 item-image-container">
		<div class="col-md-12 col-xs-12 item-image">
				<%= @product.product_name %>
				<% if @product.image.nil? then %>
					<img src="../assets/img/No_Image.png" width ="280px" height="450px">

				<% else %>
				   
				  <img src="../assets/img/<%= @product.category %>/<%= @product.image.image_path %>">
				<% end %>
		</div>
		<div class="col-md-12 col-xs-12 item-description">
			Description: <%= @product.description %>
		</div>
	</div>
	<div class="col-md-12 col-xs-12 item-content">
		Price: $<%= @product.price %>
	</div>
	<div class="col-md-12 col-xs-12 item-content">
		<%= form_for @product, :url => add_item_cart_path, remote: true do |f| %>
			<div class="col-md-4 col-xs-4">
			<%= f.label :庫存數 %>
			</div>
			<div class="col-md-4 col-xs-4" style="margin-top: 3px;">	
			<%= f.select :quantity, options_for_select(@quantity.map), :prompt => 'Select One' %>
			</div>
			<div class="col-md-2 col-md-offset-2 col-xs-2 col-md-offset-2" style="padding-top:10px;">
			<%= f.submit "購買"%>
			</div>
		<% end %>
	</div>

</div>