<div class="row">
	<div class="col-md-6 col-xs-6 item-image-container">
		<div class="col-md-12 col-xs-12 item-image">
			Product Name:<%= @product.product_name %>
				<% if @product.image.nil? then %>
				  Image Name: No Image
				<% else %>
				  <%= @product.image.image_name %>
				<% end %>
		</div>
		<div class="col-md-12 col-xs-12 item-description">
			Price:<%= @product.price %>
		</div>
	</div>
	<div class="col-md-4 col-xs-4 item-content">
	</div>
	<div class="col-md-10 col-xs-10 item-suggest-container"> Suggestion </div>
</div>